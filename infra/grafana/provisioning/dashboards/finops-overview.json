{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Total Potential Monthly Savings",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(recommendation_savings_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        }
      }
    },
    {
      "title": "Recommendations Status",
      "type": "piechart",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "sum by (status) (recommendations_total)",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Avg Waste Ratio per Namespace",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "avg by (namespace) (waste_ratio)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.3 },
              { "color": "red", "value": 0.6 }
            ]
          }
        }
      }
    },
    {
      "title": "Savings Growth (USD)",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 6 },
      "targets": [
        {
          "expr": "sum(increase(recommendation_savings_total[1h]))",
          "legendFormat": "New Savings Found",
          "refId": "A"
        },
        {
          "expr": "sum(recommendation_savings_total)",
          "legendFormat": "Cumulative Total",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10
          }
        }
      }
    }
  ],
  "refresh": "5s",
